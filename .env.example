# BCMCE Platform Environment Variables

# Database Configuration
DATABASE_URL=postgresql://bcmce_user:password@localhost:5432/bcmce
DATABASE_POOL_SIZE=20
DATABASE_MAX_OVERFLOW=10

# Redis Configuration
REDIS_URL=redis://localhost:6379/0

# API Configuration
API_HOST=0.0.0.0
API_PORT=8000
API_DEBUG=False
API_SECRET_KEY=your-secret-key-here-change-in-production

# CORS Settings
CORS_ORIGINS=http://localhost:3000,https://bcmce.com
CORS_ALLOW_CREDENTIALS=True

# Authentication
JWT_SECRET_KEY=your-jwt-secret-key-here
JWT_ALGORITHM=HS256
JWT_EXPIRATION_MINUTES=60

# TxDOT Integration
TXDOT_API_URL=https://www.dot.state.tx.us/insdtdot/orgchart/cmd/cserve/bidprice/
TXDOT_SCRAPE_INTERVAL_HOURS=24

# County Integration
BOSQUE_COUNTY_URL=https://www.co.bosque.tx.us
COUNTY_SCRAPE_INTERVAL_HOURS=6
COMMISSIONERS_COURT_EMAIL=commissioners@co.bosque.tx.us

# Supplier Configuration
SUPPLIER_ONBOARDING_EMAIL=suppliers@bcmce.com
MAX_DELIVERY_RADIUS_MILES=50
DEFAULT_OPTION_PREMIUM_30D=0.08
DEFAULT_OPTION_PREMIUM_90D=0.12
DEFAULT_OPTION_PREMIUM_180D=0.15
DEFAULT_OPTION_PREMIUM_365D=0.20

# Email Configuration
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USERNAME=your-email@gmail.com
SMTP_PASSWORD=your-app-password
SMTP_FROM_EMAIL=noreply@bcmce.com
SMTP_FROM_NAME=BCMCE Platform

# Logging
LOG_LEVEL=INFO
LOG_FILE=logs/bcmce.log

# Monitoring
SENTRY_DSN=
SENTRY_ENVIRONMENT=production

# Payment Processing (Future)
STRIPE_SECRET_KEY=
STRIPE_PUBLIC_KEY=
STRIPE_WEBHOOK_SECRET=

# Feature Flags
ENABLE_OPTIONS_TRADING=false
ENABLE_AUTOMATED_BIDDING=false
ENABLE_MULTI_COUNTY=false
